<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css" />
<%- include('../partials/nav') %>
<div id="profile-card-container">
<% profiles.forEach(profile => { %>
    <a href="/profiles/<%= profile._id %>"id="profile-card">
      <div id="avatar-name">
        <img src="<%= profile.avatar %>" alt="" id="avatar">
        <%= profile.name %>
      </div>
      <div id="favorite-game">
        <div id="favorite-game-text">
          Favorite Game:
        </div>
        <div id="favorite-game-details">
          <% if (profile.favoriteGame == undefined) { %>
            Nothing here yet!
          <% } else { %>
            <%= profile.favoriteGame.name %>
            <img src="<%= profile.favoriteGame.imageUrl %>" alt="" id="favorite-game-image" height="40" width="60">
          <% } %>
        </div>
      </div>
      <div id="recently-played">
        <div id="recently-played-text">
          Recently Played:
        </div>
        <% if (profile.recentlyPlayedGames.length == 0) { %>
          <div id="recently-played-details">
            Nothing here yet!
          </div>
        <% } else if (profile.recentlyPlayedGames.length == 1) { %>
          <div id="recently-played-details">
            <%= profile.recentlyPlayedGames[0].name %>
            <img src="<%= profile.recentlyPlayedGames[0].imageUrl %>" alt="" id="recently-played-game-image" height="40" width="60">
          </div>
        <% } else { %>
          <div id="recently-played-details">
            <%= profile.recentlyPlayedGames[0].name %>
            <img src="<%= profile.recentlyPlayedGames[0].imageUrl %>" alt="" id="recently-played-game-image" height="40" width="60">
          </div>
          <div id="recently-played-details">
            <%= profile.recentlyPlayedGames[1].name %>
            <img src="<%= profile.recentlyPlayedGames[1].imageUrl %>" alt="" id="recently-played-game-image" height="40" width="60">
          </div>
        <% } %>
      </div>
    </a>
<% }) %>
</div>
<%- include('../partials/footer') %>